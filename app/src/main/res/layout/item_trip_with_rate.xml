<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="88dp">

    <ImageView
            android:layout_width="56dp"
            android:layout_height="56dp"
            app:srcCompat="@drawable/yoda"
            android:id="@+id/imageViewPic"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"/>
    <TextView
            android:text="Yoda"
            android:layout_width="wrap_content"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:fontFamily="sans-serif"
            android:layout_height="wrap_content"
            android:id="@+id/textViewName"
            app:layout_constraintStart_toEndOf="@+id/imageViewPic"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="Hoth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/gray"
            android:id="@+id/textViewPickUp" app:layout_constraintStart_toEndOf="@+id/imageViewPic"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textViewName"/>
    <ImageView
            android:id="@+id/imageViewArrow"
            android:layout_width="17dp"
            android:layout_height="10dp"
            app:srcCompat="@drawable/ic_arrow"
            app:layout_constraintStart_toEndOf="@+id/textViewPickUp"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            app:layout_constraintBottom_toBottomOf="@+id/textViewPickUp"
            app:layout_constraintTop_toTopOf="@+id/textViewPickUp"
            tools:ignore="VectorDrawableCompat"/>
    <TextView
            android:text="Tatooine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewDropOff"
            app:layout_constraintStart_toEndOf="@+id/imageViewArrow"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:textColor="@color/gray"
            app:layout_constraintTop_toTopOf="@+id/textViewPickUp"
            app:layout_constraintBottom_toBottomOf="@+id/textViewPickUp"/>


    <RatingBar android:id="@+id/ratingBar"
               android:layout_width="wrap_content"
               style="@style/Rating_Bar"
               android:isIndicator="true"
               android:layout_height="wrap_content"
               app:layout_constraintTop_toBottomOf="@+id/textViewPickUp"
               app:layout_constraintStart_toEndOf="@+id/imageViewPic"
               android:layout_marginLeft="8dp"
               android:layout_marginStart="8dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
